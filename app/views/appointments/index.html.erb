<%= link_to "Doctors", doctors_path %>

<%= form_for @appointment do |f| %>

  <%= f.label :doctor_id %>
  <%= f.collection_select :id, Doctor.all, :id,
      :name, {include_blank: true}, {class: "form-control"} %>

  <%= f.label :date %>
  <%= f.date_select :date %>

<%= f.submit %>

<% end %>

<% @appointments.each do |appointment| %>
  <li><%= appointment.date %></li>
<% end %>
